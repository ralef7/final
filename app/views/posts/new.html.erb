<h1>Write a Blog Post</h1>

<%= form_tag "/posts", :method => 'post' do %>
  <div>
  <label>FIRST SELECT THE BLOG YOU'RE POSTING IN</label>
  </div>
  <div>
    <select name="blog_id">
    <% Blog.where(:user_id => session[:user_id]).limit(500).each do |b| %>
      <option value="<%= b.id %>"><%= b.name %></option>
    <% end %>
  </select>
  </div>
  <div>
    <label>Post Title:</label>
  </div>
  <input type="text" name="title">
  <div>
  </div>
  <div>
  <h3>Post</h3>
  </div>
  <div>
  <%= text_area_tag('text', nil, size: "25x10") %>
  </div>
  <div>
  <input type="submit" value="submit post!">
  <% end %>
  </div>