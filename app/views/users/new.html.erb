<h1>Please sign up!</h1>

<%= form_tag "/users", :method => 'post' do %>
  <div>
    <label>New Username:</label>
    <input type="text" name="username" required>
  </div>

  <div>
    <label>E-mail</label>
    <input type="email" name="email" placeholder="somebody@somewhere.xxx" required>
  </div>
  <div>
    <label>Birthdate</label>
    <input type="date" name="bdaytime" placeholder="mm/dd/yyyy">
  </div>
  <div>
    <label>Sex</label>
    <input type="radio" name="sex" value="male" > Male
    <br>
    <input type="radio" name="sex" value="female"> Female
  </div>
  <div>
    <label>Please select a password</label>
    <input type="password" name="password" placeholder="dont tell anyone" required>
  </div>
  <div>
    <input type="password" name="password_confirmation" placeholder="confirm password" required>
  </div>
  <p>Please make sure your two passwords match, or you will have to fill out this form again.</p>
  
  <input type="submit" value="Sign up!">

<% end %>
  
